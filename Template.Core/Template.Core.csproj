    </Content>
  </ItemGroup>
  <ItemGroup>
    <Content Include="Emails\Templates\**\*.*">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>
</Project>
